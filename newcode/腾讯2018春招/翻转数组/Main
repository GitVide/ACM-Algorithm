import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner scanner = new Scanner();
        int n = scanner.nextInt();
        int m = scanner.nextInt();
        int sum = 0;
        int flag = m;
        for(int i = 0 ; i < n ; i++){
            if(flag > 0){
                sum += -i;
                flag--;
            }else{
                sum += i;
            }
        }
    }
}
